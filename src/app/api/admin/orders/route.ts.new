import { NextRequest, NextResponse } from "next/server"
import { Query } from "node-appwrite"
import { createAdminClient } from "@/lib/appwrite-admin"
import { EnhancedOrder, OrderItem, OrderReturn } from "@/types/orders"
import { InventoryService } from '@/lib/services/InventoryService'

const DATABASE_ID = process.env.NEXT_PUBLIC_APPWRITE_DATABASE_ID || ''
const ORDERS_COLLECTION_ID = 'orders'
const PRODUCTS_COLLECTION_ID = 'products'

export async function GET(request: NextRequest) {
  try {
    const { searchParams } = new URL(request.url)
    const orderId = searchParams.get("orderId")
    const search = searchParams.get("search") || ""
    const limit = parseInt(searchParams.get("limit") || "100")
    const offset = parseInt(searchParams.get("offset") || "0")
    const status = searchParams.get("status")

    const { databases } = await createAdminClient()

    if (orderId) {
      const order = await databases.getDocument(DATABASE_ID, ORDERS_COLLECTION_ID, orderId)
      return NextResponse.json({ order })
    }

    const queries = [
      Query.limit(limit),
      Query.offset(offset),
      Query.orderDesc('$createdAt')
    ]

    if (search) {
      queries.push(Query.search("order_number", search))
    }

    if (status && status !== "all") {
      queries.push(Query.equal("status", status))
    }

    const result = await databases.listDocuments(DATABASE_ID, ORDERS_COLLECTION_ID, queries)
    
    // Calculate stats for all orders
    const allOrders = await databases.listDocuments(DATABASE_ID, ORDERS_COLLECTION_ID, [Query.limit(1000)])
    const orders = allOrders.documents

    const stats = {
      total: orders.length,
      pending: orders.filter(o => o.status === "pending").length,
      processing: orders.filter(o => o.status === "processing").length,
      shipped: orders.filter(o => o.status === "shipped").length,
      delivered: orders.filter(o => o.status === "delivered").length,
      cancelled: orders.filter(o => o.status === "cancelled").length,
      returned: orders.filter(o => o.status === "returned").length,
      totalRevenue: orders
        .filter(o => o.status === "delivered")
        .reduce((sum, o) => sum + (o.total_amount || 0), 0)
    }

    return NextResponse.json({
      orders: result.documents,
      stats
    })

  } catch (error: any) {
    console.error("‚ùå Error fetching orders:", error)
    return NextResponse.json(
      { error: error.message || "Failed to fetch orders" },
      { status: 500 }
    )
  }
}

export async function PATCH(request: NextRequest) {
  try {
    const { searchParams } = new URL(request.url)
    const orderId = searchParams.get("orderId")
    const action = searchParams.get("action")

    if (!orderId || !action) {
      return NextResponse.json(
        { error: "Order ID and action are required" },
        { status: 400 }
      )
    }

    console.log(`üîÑ Processing ${action} for order ${orderId}`)
    const { databases } = await createAdminClient()

    // Get current order
    const order = await databases.getDocument(DATABASE_ID, ORDERS_COLLECTION_ID, orderId)
    const orderItems = JSON.parse(order.items || '[]')
    const timeline = JSON.parse(order.timeline || '[]')

    // Prepare update data
    const updateData: any = {
      timeline: JSON.stringify([
        ...timeline,
        {
          status: action,
          timestamp: new Date().toISOString(),
          note: `Order ${action.replace('mark_', '')}`
        }
      ])
    }

    // Handle different actions
    switch (action) {
      case 'mark_processing':
        updateData.status = 'processing'
        updateData.fulfillment_status = 'unfulfilled'
        try {
          await InventoryService.validateAndReserveStock(orderItems, orderId)
          console.log('‚úÖ Stock reserved successfully')
        } catch (error) {
          console.error('‚ùå Failed to reserve stock:', error)
          return NextResponse.json({ error: 'Failed to reserve stock' }, { status: 500 })
        }
        break

      case 'mark_shipped':
        updateData.status = 'shipped'
        updateData.fulfillment_status = 'partially_fulfilled'
        break

      case 'mark_delivered':
        updateData.status = 'delivered'
        updateData.fulfillment_status = 'fulfilled'
        try {
          await InventoryService.finalizeOrderDelivery(orderItems, orderId)
          console.log('‚úÖ Stock updated for delivery')
        } catch (error) {
          console.error('‚ùå Failed to update inventory:', error)
          return NextResponse.json({ error: 'Failed to update inventory' }, { status: 500 })
        }
        break

      case 'mark_cancelled':
        updateData.status = 'cancelled'
        updateData.fulfillment_status = 'cancelled'
        try {
          await InventoryService.releaseReservations(orderItems, orderId)
          console.log('‚úÖ Stock released for cancelled order')
        } catch (error) {
          console.error('‚ùå Failed to release stock:', error)
          return NextResponse.json({ error: 'Failed to release stock' }, { status: 500 })
        }
        break

      case 'mark_returned':
        updateData.status = 'returned'
        updateData.fulfillment_status = 'returned'
        break

      default:
        return NextResponse.json({ error: "Invalid action" }, { status: 400 })
    }

    // Update the order
    const updatedOrder = await databases.updateDocument(
      DATABASE_ID,
      ORDERS_COLLECTION_ID,
      orderId,
      updateData
    )

    console.log(`‚úÖ Order ${orderId} updated to ${action}`)
    return NextResponse.json({ 
      success: true,
      order: updatedOrder 
    })

  } catch (error: any) {
    console.error("‚ùå Error updating order:", error)
    return NextResponse.json(
      { 
        success: false,
        error: error.message || "Failed to update order" 
      },
      { status: 500 }
    )
  }
}